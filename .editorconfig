# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Also, trim all whitespace
trim_trailing_whitespace = true

# Assume an indent convention of 4 spaces by default
indent_style = space

# Assume UTF-8 unless specified
charset = utf-8

# Cap line length to 80 chars
max_line_length = 80
